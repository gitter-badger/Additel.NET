<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Additel.Forms.Controls;assembly=Additel.Forms"
             mc:Ignorable="d"
             x:Class="Additel.UIGallery.MainPage">

    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly">
        <!-- Place new controls here -->
        <Label Text="Welcome to Additel.Forms!"/>
        <controls:Switch x:Name="s1"/>
        <controls:Switch x:Name="s2" OnColor="HotPink"/>
        <controls:Switch x:Name="s3" OnColor="RoyalBlue"
                         IsChecked="{Binding Source={x:Reference s1}, Path=IsChecked}"
                         IsEnabled="{Binding Source={x:Reference s2}, Path=IsChecked}"/>
        <Switch x:Name="s4"/>
        <Switch x:Name="s5" OnColor="HotPink"/>
        <Switch x:Name="s6" OnColor="RoyalBlue"
                IsToggled="{Binding Source={x:Reference s4}, Path=IsToggled}"
                IsEnabled="{Binding Source={x:Reference s5}, Path=IsToggled}"/>
    </FlexLayout>

</ContentPage>
